<% layout('/layouts/boilerplate') -%>
    <style>
        section {
            background-color: #ffffff;
            width: 100%;
            height: 80vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .approval {
            margin: 20px auto;
            max-width: 800px;
            padding: 20px;
            background-color: #ffffff;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            border-radius: 10px;

        }

        h1 {
            color: #007bff;
            margin-bottom: 20px;
        }

        .registration-card {
            border: 1px solid #dee2e6;
            padding: 15px;
            margin-bottom: 20px;
            border-radius: 5px;
            background-color: #ffffff;
        }

        .approved-message {
            color: #28a745;
            font-weight: bold;
        }

        .btn-approve {
            background-color: #007bff;
            color: #ffffff;
            border: none;
            padding: 5px 15px;
            border-radius: 3px;
            cursor: pointer;
        }
    </style>

    <section>
        <div class="container-fluid approval">
            <h1>Pending Applications</h1>

            <% for (const registration of pendingRegistrations) { %>
                <div class="registration-card">
                    <h2>
                        <%= registration.student.firstName %>
                            <%= registration.student.lastName %>
                    </h2>
                    <p>Curriculum: <%= registration.curriculum %>
                    </p>
                    <p>Year Level: <%= registration.yearLevel %>
                    </p>
                    <p>Status: <%= registration.status %>
                    </p>
                </div>
                <% } %>
        </div>
    </section>