<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>IEDS</title>
    <link rel="stylesheet" href="/stylesheet/sidebar.css">
    <!-- Include Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>

<body>
    <div class="sidebar bg-primary" id="sidebar">
        <div class="input-group mt-3 p-2">
            <div class="form-outline">
                <input type="search" id="form1" class="form-control" style="width: 180px;" onkeyup="search()" />
            </div>
            <button type="button search-btn" class="btn btn-primary" style="background: none;border: none;">
                <i class="fas fa-search"></i>
            </button>

            <div class="student-wrapper  mt-3">
                <% for(let student of students) {%>
                    <ul class="list-group" id="list-group">

                        <li class="list-group-item mb-1 text-white"
                            style="background: none; border: 2px solid white; width: 220px; font-size: 13px;">
                            <% if (student.images && student.images.length> 0) { %>
                                <img src="<%= student.images[0].url %>" alt="" style="width: 50px;height: 50px;">
                                <% } else { %>
                                    <img src="/images/logo.png" alt="Default Image" style="width: 50px; height: 50px;">
                                    <% } %>
                                        <h6>
                                            <% if (sidebarStudent) { %>
                                                <a href="#" class="studentLink"
                                                    data-studentnumber="<%= sidebarStudent.student.studentNumber %>">
                                                    <%= sidebarStudent.student.firstName %>
                                                        <%= sidebarStudent.student.lastName %>
                                                </a>
                                                <% } %>
                                        </h6> - <%= student.yearLevel %>
                        </li>
                    </ul>
                    <% }%>
            </div>
        </div>
    </div>


    <!-- Modal for Student Number Input -->
    <div class="modal fade" id="studentNumberModal" tabindex="-1" role="dialog"
        aria-labelledby="studentNumberModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="studentNumberModalLabel">Enter Student Number</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="studentNumberForm">
                        <div class="form-group">
                            <label for="studentNumber">Student Number</label>
                            <input type="text" class="form-control" id="studentNumber" required>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>



    <script>
        // Show the modal when a link with the "studentLink" class is clicked
        $('.studentLink').click(function (e) {
            e.preventDefault(); // Prevent the default link behavior
            var studentNumber = $(this).data('studentnumber'); // Get the student number from data attribute
            $('#studentNumberModal').modal('show'); // Show the modal
            $('#studentNumber').data('expectednumber', studentNumber); // Store the expected student number in a data attribute
        });

        // Handle form submission
        $('#studentNumberForm').submit(function (e) {
            e.preventDefault(); // Prevent the form from submitting

            // Get the entered student number
            var enteredStudentNumber = $('#studentNumber').val();
            var expectedStudentNumber = $('#studentNumber').data('expectednumber'); // Get the expected student number

            // Check if the entered student number matches the expected student number
            if (enteredStudentNumber === expectedStudentNumber) {
                // Redirect to the student's page if the student number is correct
                window.location.href = "/student/<%= student._id %>";
            } else {
                // Show an error message or take appropriate action for incorrect student number
                alert("Incorrect Student Number. Please try again.");
            }

            // Close the modal
            $('#studentNumberModal').modal('hide');
        });
    </script>



    <!-- Include Bootstrap 5 JavaScript and Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>

    <script>
        const search = () => {
            const searchbox = document.getElementById('form1').value.toUpperCase();
            const storeName = document.getElementById('list-group');
            const student = document.querySelectorAll('.list-group-item');
            const sname = document.getElementsByTagName('h6');

            for (let i = 0; i < sname.length; i++) {
                let match = sname[i];

                if (match) {
                    let textvalue = match.textContent || match.innerHTML;

                    if (textvalue.toUpperCase().indexOf(searchbox) > -1) {
                        student[i].style.display = "";
                    } else {
                        student[i].style.display = "none";
                    }
                }
            }
        }


    </script>
</body>

</html>