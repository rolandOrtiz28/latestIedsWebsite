<% layout('/layouts/boilerplate') -%>
    <link rel="stylesheet" href="/stylesheet/updateshow.css">
    <section class="showpage">

        <div class="row mt-3">
            <h1 class="h1">
                <%= update.title %>
            </h1>

            <%update.images.forEach((img, i)=>{ %>
                <div class="carousel-item <%= i === 0 ? 'active' : '' %> d-flex justify-content-center image">
                    <img src="<%= img.url %>" class="d-block" alt="...">
                </div>
                <% }) %>
                    <% if(update.images.length> 1) {%>

                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls"
                            data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls"
                            data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                        <% } %>
                            <p class="mt-3">
                                <%= update.description %>
                            </p>

                            <h5 class="mt-3">Date:<%= update.createdAt.toLocaleDateString() %>
                            </h5>

                            <button class="btn btn-primary"><a href="/updates" class="text-white">Back</a></button>
        </div>



    </section>