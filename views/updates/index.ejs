<% layout('/layouts/boilerplate') -%>
<link rel="stylesheet" href="/stylesheet/updates.css">
<div class="container-fluid main-update">
    <!-- Button trigger modal -->

    <h1 class="mb-5 update-title text-center">IEDS UPDATES</h1>
    <div class="row">
        <div class="d-flex flex-column justify-content-center align-items-center update-wrapper">
            <!-- Latest Update Section -->
            <div class="col-md-9 latest-update mb-4">
                <h2 class="mb-4 text-center">Latest Update</h2>
                <div class="main-content">
                    <% if (latestUpdate) { %>
                    <div class="card" style="width: 20rem;">
                     
                        <% if (latestUpdate && latestUpdate.images && latestUpdate.images.length > 0) { %>
                            <div class="card" style="width: 20rem;">
                              <img src="<%= latestUpdate.images[0].url %>" class="card-img-top" alt="...">
                              <!-- Remove the duplicate title here -->
                            </div>
                          <% } else { %>
                         
                            <p>No image available</p>
                          <% } %>
                        <div class="card-body">
                            <!-- Keep this title -->
                            <h3 class="card-title">
                                <%= latestUpdate.title %>
                            </h3>
                            <small class="text-muted">
                                Published: <%= latestUpdate.createdAt.toLocaleDateString()%>
                            </small>
                            <p class="card-text">
                                <%= latestUpdate.subDescription %>
                            </p>
                            <a href="/updates/<%=latestUpdate._id%>" class="btn btn-primary">More info</a>
                        </div>
                    </div>
                    <% } else { %>
                    <p class="text-muted" style="font-size: 20px;">No latest update available.</p>
                    <% } %>
                </div>
            </div>
            

            <!-- Previous Updates Section -->
            <div class="col-md-9 previous-updates">
                <h2 class="mb-4 text-center">Previous Updates</h2>
                <div class="main-content">
                    <% for(let update of previousUpdates ){ %>
                    <a href="/updates/<%=update._id%>">
                        <div class="card2">
                            <% if (update.images && update.images.length > 0) { %>
                                <img src="<%= update.images[0].url %>" class="card-img-top img-fluid" alt="...">
                            <% } else { %>
                                <img src="/placeholder-image.jpg" class="card-img-top img-fluid" alt="Placeholder Image">
                            <% } %>
                            <div class="card__content">
                                <p class="card__title">
                                    <%= update.title %>
                                </p>
                                <p class="card__description">
                                    <%= update.subDescription %>
                                </p>
                                <small class="text-muted">
                                    Published: <%= latestUpdate ? latestUpdate.createdAt.toLocaleDateString() : '' %>
                                </small>
                            </div>
                        </div>
                    </a>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

